# RCMD         : App select
# Alt  h j k l : Window control keys - Removed
# Alt  w a s d : Size keys - Removed

# App select
# open apps
cmd - return : open -a "Alacritty"
ralt - s : open -a "Spotify"
ralt - b : open -a "Brave Browser"
ralt - t : open -a "TickTick"
ralt - g : open -a "Spark"
ralt - p : open -a "Bitwarden"
ralt - m : open -a "Caprine"
ralt - l : hue lights 4 on
shift + ralt - l : hue lights 4 off

# For home setup
rctrl - s : open -a "Spotify"
rctrl - b : open -a "Brave Browser"
rctrl - t : open -a "TickTick"
rctrl - g : open -a "Spark"
rctrl - p : open -a "Bitwarden"
rctrl - m : open -a "Caprine"
rctrl - l : hue lights 4 on
shift + rctrl - l : hue lights 4 off

# focus window
#alt - h : yabai -m window --focus west
#alt - j : yabai -m window --focus south
#alt - k : yabai -m window --focus north
#alt - l : yabai -m window --focus east

## swap window
#shift + alt - h : yabai -m window --swap west
#shift + alt - j : yabai -m window --swap south
#shift + alt - k : yabai -m window --swap north
#shift + alt - l : yabai -m window --swap east

## warp window
#cmd + alt - h : yabai -m window --warp west
#cmd + alt - j : yabai -m window --warp south
